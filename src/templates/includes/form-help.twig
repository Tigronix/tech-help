<form action="" class="form-help js-form-help">
	<div class="form-help__container">
		<div class="form-help__item">
			<img src="assets/img/sellout-guy.png" alt="" class="form-help__man">
			<div class="form-help__info">
				<div class="form-help__header">
					<span class="form-help__header-txt">
						<span class="form-help__steps js-steps-1">КАКОЙ У ВАС АВТОМОБИЛЬ?</span>
						<span class="form-help__steps js-steps-2">ЧТО НУЖНО СДЕЛАТЬ?</span>
						<span class="form-help__steps js-steps-3">ВАШИ КОНТАКТЫ:</span>
					</span>
				</div>
				<div class="form-help__desc">Выберите марку и модель вашего автомобиля</div>
			</div>
			<ul class="form-help__form-list">
				<li class="form-help__form-li form-help__form-li--50 js-steps-1">
					{% include 'select.twig' with {
              id: 'brand',
              mod: 'form-elem--avto form-elem--brand',
              selectList: {
                item0: {
                  txt: 'Марка автомобиля',
                  value: 'None'
                },
                item1: {
                  txt: 'BMW',
                  value: 'BMW',
                },
                item2: {
                  txt: 'Mazda',
                  value: 'Mazda'
                },
                item3: {
                  txt: 'Toyota',
                  value: 'Toyota'
                },
              }
            } %}
				</li>
				<li class="form-help__form-li form-help__form-li--50 js-steps-1">
					{% include 'select.twig' with {
              id: 'model',
              mod: 'form-elem--avto form-elem--model',
              disabled: 'disabled',
              selectList: {
                item0: {
                  txt: 'Модель',
                  value: 'None'
                },
                item1: {
                  txt: 'x1',
                  value: 'x1',
                  group: 'BMW'
                },
                item2: {
                  txt: 'x5',
                  value: 'x5',
                  group: 'BMW'
                },
                item3: {
                  txt: 'x6',
                  value: 'x6',
                  group: 'BMW'
                },
                item4: {
                  txt: 'mx-5',
                  value: 'mx-5',
                  group: 'Mazda'
                },
                item5: {
                  txt: '3',
                  value: '3',
                  group: 'Mazda'
                },
                item6: {
                  txt: 'rx8',
                  value: 'rx8',
                  group: 'Mazda'
                },
                item7: {
                  txt: 'camri',
                  value: 'camri',
                  group: 'Toyota'
                },
                item8: {
                  txt: '4Runner',
                  value: '4Runner',
                  group: 'Toyota'
                },
                item9: {
                  txt: 'Avalon',
                  value: 'Avalon',
                  group: 'Toyota'
                },
              }
            } %}
				</li>
				<li class="form-help__form-li js-steps-2">
					{% include 'select.twig' with {
              id: 'malfunction',
              mod: 'form-elem--avto form-elem--malfunction',
              selectList: {
                item0: {
                  txt: 'Выберите неисправность',
                  value: 'None'
                },
                item1: {
                  txt: 'Замена аккмулятора',
                  value: 'repair-acum',
                },
                item2: {
                  txt: 'Слив топлива',
                  value: 'fuel',
                },
								item3: {
									txt: 'Вскрытие автомобиля',
									value: 'open-car'
								}
              }
            } %}
				</li>
				<li class="form-help__form-li form-help__li--50">
					{% include 'input.twig' with {
						placeholder: 'Имя',
						mod: 'form-elem--avto'
					} %}
				</li>
				<li class="form-help__form-li form-help__li--50">
					{% include 'input.twig' with {
						placeholder: 'Телефон для связи',
						type: 'phone',
						mod: 'form-elem--avto'
					} %}
				</li>
				<li class="form-help__form-li">
					{% include 'textarea.twig' with {
						placeholder: 'Комментарий',
						mod: 'form-elem--avto'
					} %}
				</li>
			</ul>
			<div class="js-total-text"></div>
			<button type="button" class="btn form-help__submit disabled">Продолжить</button>
		</div>
	</div>
</form>
